-if @scholarships.size > 0
  %table
    %tr
      %td{:colspan => '3', :id=> 'filter_count'}
        %span="#{t(:scholarship_count, :count => @scholarships.size)}"
    %tr{:id => "table_header" }
      %th{:colspan=>'2'}=t(:name)
      %th= t(:cycle)
      -@scholarships.each do |scholarship|
        %tr{ :id=>"seq_#{scholarship.seq}", :class => "scholarship #{cycle( 'scholarship_odd', 'scholarship_even')}"}
          %td{:class => "info_button"}
            =check_box_tag("selected_scholarships[#{scholarship.seq}]", nil, false)
            //
          %td
            %a{ :href=>scholarship.bbaf_url}
              =scholarship.name
          %td=scholarship.cycle
-else
  #no_scholarship
    %span
      =t(:no_scholarships_found)
